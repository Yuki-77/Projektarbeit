
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Einstellungen"
        android:background="#8ED7F4"
        android:textColor="@android:color/white"
        android:id="@+id/SettingsText"/>
    <LinearLayout
        android:layout_x="0dp"
        android:layout_y="350dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/spracheButton"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:id="@+id/spracheImg"
            android:minHeight="70dp"
            android:minWidth="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_language"/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spracheTextView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:text="Sprache"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SpracheText" />
        </LinearLayout>
    </LinearLayout>

    

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/soundButton"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:id="@+id/soundImg"
            android:minHeight="70dp"
            android:minWidth="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_sound"/>
           <Switch
                android:text="Hinweistöne"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/soundSwitch"
                android:textOn="An"
                android:textOff="Aus"
                android:showText="true"
                android:trackTint="#8ED7F4"
                android:thumbTint="#8ED7F4"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/resetButton"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:id="@+id/resetImg"
            android:minHeight="70dp"
            android:minWidth="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_reset"/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resetTextView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:text="Zurücksetzen"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resetText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/aboutusButton"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:id="@+id/aboutusImg"
            android:minHeight="70dp"
            android:minWidth="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_team"/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aboutusTextView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:text="Über uns"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aboutusText" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/referenceButton"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:id="@+id/referenceImg"
            android:minHeight="70dp"
            android:minWidth="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_references"/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/referenceTextView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:text="Referenzen"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/referenceText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
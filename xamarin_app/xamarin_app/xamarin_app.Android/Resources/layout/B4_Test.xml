
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height= "150dp"
            android:id="@+id/vocabImg1"/>

        <TextView
            android:text="bairisch"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/vocabImg1"
            android:gravity="center"
            android:maxLines="2"
            android:lines="2"
            android:id="@+id/vocabText1"/>

        <ImageView
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_height= "150dp"
            android:id="@+id/vocabImg2"/>

        <TextView
            android:text="bairisch"
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/vocabImg2"
            android:gravity="center"
            android:maxLines="2"
            android:lines="2"
            android:id="@+id/vocabText2"/>

        <ImageView
            android:clickable="true"
            android:layout_below = "@+id/vocabText1"
            android:layout_marginTop = "20dp"
            android:layout_width="150dp"
            android:layout_height= "150dp"
            android:id="@+id/vocabImg3"/>

        <TextView
            android:text="bairisch"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/vocabImg3"
            android:gravity="center"
            android:maxLines="2"
            android:lines="2"
            android:id="@+id/vocabText3"/>

        <ImageView
            android:clickable="true"
            android:layout_below = "@+id/vocabText2"
            android:layout_marginTop = "20dp"
            android:layout_alignParentRight = "true"
            android:layout_width = "150dp"
            android:layout_height = "150dp"
            android:id = "@+id/vocabImg4"/>

        <TextView
            android:text = "bairisch"
            android:layout_alignParentRight ="true"
            android:layout_width = "150dp"
            android:layout_height = "wrap_content"
            android:layout_below = "@+id/vocabImg4"
            android:gravity = "center"
            android:maxLines="2"
            android:lines="2"
            android:id="@+id/vocabText4"/>

        <ImageButton
            android:src="@drawable/playbuttonactive"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/vocabText4"
            android:layout_marginTop="20dp"
            android:layout_marginBottom = "20dp"
            android:layout_centerHorizontal = "true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/playSoundButton" />

    </RelativeLayout>
</ScrollView>